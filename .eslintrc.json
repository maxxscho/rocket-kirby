{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["prettier", "airbnb-base"],
    "plugins": ["import"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-param-reassign": ["error", {
            "props": true,
            "ignorePropertyModificationsFor": [
                "state"
            ]
        }]
    },
    "globals": {
        "document": true,
        "window": true,
        "Vue": true
    }
}
